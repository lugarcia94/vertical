.showcase--full
    margin-top: 80px


.showcase--header
    color: #071720
    font-size: 25px
    text-transform: uppercase
    text-align: center
    margin: 0 auto
    font-weight: 100
    letter-spacing: 5px

.show-case--content
    ul
        li
            height: 420px
            max-width: 265px
            display: flex
            flex-wrap: wrap
            align-items: center
            justify-content: space-between
            text-align: center
            margin: 0 auto

.show-case_title
    font-size: 15px
    text-align: center
    color: #071720
    text-transform: uppercase
    letter-spacing: 2px
    font-family: 'Poppins', sans-serif
    margin: 0 auto
    font-weight: 100
    margin-top: 10px

    a
        color: #071720
        text-decoration: none

        .rating-result
            .star-result
                display: none
            .count
                display: none

.show-case_short-description
    font-size: 11px;
    color: #607b8a;
    margin-top: -20px;
    max-width: 244px;
    margin: 0 auto;
    transition: all 150ms ease-in-out;

    a
        font-size: 11px;
        color: #607b8a;
        text-decoration: none

        &:hover
            color: #0e253e

.show-case_button
    margin: 0 auto;
    padding: 5px 23px;
    background: #95df4c;
    border-radius: 3px;
    font-size: 11px;
    text-transform: uppercase;
    font-weight: 700;

    &:hover
        color: #0e253e

    a
        color: #fff
        transition: all 150ms ease-in-out

        &:hover
            text-decoration: none
            color: #0e253e


.show-case_img
    img
        transition: all 150ms ease-in-out;
        transform: scale(1.1);
        max-height: 100%;

        &:hover
            transform: scale(1);
            opacity: 0.9;



.show-case--content
    max-width: 100%;
    margin-top: 55px;
    padding-bottom: 40px;
    border-bottom: 1px solid #cbd8e1;

.owl-nav
    display: flex;
    justify-content: space-between;
    position: absolute;
    top: 20%;
    width: 100%;

    @media(max-width: 556px)
        width: 80%;
        left: 0;
        right: 0;
        text-align: center;
        margin: 0 auto;

.owl-prev
    font-size: 0;
    width: 20px;
    height: 35px;
    background: url(/wp-content/themes/lmstar/img/prev.png);
    background-repeat: no-repeat;
    transition: all 150ms ease-in-out;

.owl-next
    font-size: 0;
    width: 20px;
    height: 35px;
    background: url(/wp-content/themes/lmstar/img/next.png);
    background-repeat: no-repeat;
    right: 0;
    transition: all 150ms ease-in-out;

.show-case_img
    height: 220px;

.rating-result
    flex: 0 0 100%;
    width: 100%;
    margin: 0 auto;
    text-align: center;

.mr-star-rating
    font-size: 14px
