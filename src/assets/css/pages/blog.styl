.blog
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    align-items: center
    margin-top: 100px

    .container--post
        flex: 0 0 350px

        @media(max-width:992px) and (min-width:768px)
            flex: 0 0 45%

        @media(max-width:767px)
            flex: 0 0 100%
            
        .post--imagem
            max-height: 146px
            overflow: hidden
            transition: all 150ms ease-in-out

            a
                overflow: hidden
                transition: all 150ms ease-in-out

                img
                    transition: all 150ms ease-in-out
                    &:hover
                        transform: scale(1.2);

        .info-post
            padding: 30px
            border: 1px solid #bfdbeb
            border-top: none
            border-radius: 5px
            margin-bottom: 35px
            border-top-left-radius: 0px
            border-top-right-radius: 0px

            .post--title
                a
                    font-size: 12px
                    color: #14325a
                    font-weight: 600
                    text-decoration: none
                    transition: all 150ms ease-in-out



            .description
                line-height: 1.2

                a
                    font-size: 11px
                    color: #607b8a
                    text-decoration: none

                    &:hover
                        color: #14325a!important

            .dados-post
                display: flex
                justify-content: space-between
                align-items: center
                margin-top: 5px

            .data--coments
                font-size: 11px
                color: #14325a
                margin: 5px 0
                font-weight: 400
                text-shadow: 0 0
                flex: 0 0 50%
                display: flex

                .last
                    margin-left: 25px

                span
                    display: flex
                    align-items: center
                    flex-wrap: nowrap
                    flex: 0 0 50%

                    img
                        margin-right: 5px

            .author
                flex: 0 0 50%
                font-size: 11px
                color: #14325a
                text-shadow: 0 0
                text-align: right
                text-transform: capitalize
                
.revista__lista 
    .conteudo-post 
        max-width: 200px
        width: 100%
        text-align: center
        margin-bottom : 20px
        
    
