.back--blog
    margin-top: 100px
    margin-bottom: 25px
    a
        font-size: 11px
        color: #071720
        text-transform: uppercase
        letter-spacing: 2.5px
        transition: all 150ms ease-in-out

        &:hover
            text-decoration: none
            color: #f0c823

.contant--single
    p
        color: #607b8a
        font-size: 14px
        line-height: 1.9

        @media(max-width:992px)
            text-align: justify;

.single-post
    padding: 0;

 

.contant--single
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;

    .content--full
        flex: 0 0 100%

    .right--single
        flex: 0 0 50%
        margin-top: 30px
        margin-bottom: 70px

    .img--single
        flex: 0 0 50%
        float: left
        margin: 0 30px 30px 0

        @media(max-width:992px)
            flex: 0 0 100%
            width: 100%
            text-align: center
            margin: 0 0 30px 0
.title--right
    font-size: 25px
    color: #14325a
    font-weight: 600
    letter-spacing: 2px

.data--coments
    display: flex;
    justify-content: space-around;
    align-items: center;
    color: #b7c6c5;
    font-size: 13px;
    text-shadow: 0 0;
    flex: 0 0 50%;
    margin: 10px 0;

    span    
        display: flex
        align-items: center
        justify-content: center

    img 
        margin-right: 5px

    @media(max-width:992px)
        flex: 0 0 100%;

.dados-post
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 10px;

.share--single
    @media(max-width:992px)
        text-align: center;
        margin-top: 10px;
        width: 100%;
