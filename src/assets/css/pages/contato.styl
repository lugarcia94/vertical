.contato--page

    .topo--h1
        flex: 0 0 100%
    h1
        color: #071824
        font-size: 25px
        margin-bottom: 30px
        letter-spacing: 5px
        text-transform: uppercase

    h2
        text-transform: uppercase
        font-size: 15px
        color: #f0c823
        font-weight: 500

    h3
        font-size: 15px
        color: #607b8a
        margin: 5px 0
        font-weight: 400

    h4
        font-size: 24px
        color: #14325a
        font-weight: 700
        margin-bottom: 30px

.conteudo_contato
    margin-top: 45px
    display: flex
    justify-content: space-between
    flex-wrap: wrap

    .left
        max-width: 750px
        width: 100%
        margin: 0 auto

.info_contato
    span
        display: block
        font-size: 12px
        margin-top: 10px

    .item1 
        margin-top: 15px
        font-size: 22px
        font-weight: 600
        color: #232323

    .item3 
        margin-top: 15px

    .item4
        margin-top: 5px

    .item6
        margin-top: 15px

.title_contato 
    font-size: 12px;
    color: #232323;
    font-weight: 400;

.maps__contato 
    display: flex
    justify-content: space-between
    flex-wrap: wrap
    align-items: center

.info_contato 
    max-width: 250px;
    color: #000;

.right 
    margin: 0 auto
    .right_single 
        .revistas__div 
            max-width: 360px
        .banner__home
            margin: 30px 0

.form__contato
    margin-top: 30px

    span 
        color: #232323
        font-size: 23px
  

form.wpcf7-form 
    display: flex
    justify-content: space-between
    flex-wrap: wrap

    p
        margin-bottom: 10px
        text-align: left
            

        @media(max-width:992px)
            width: 100%

            label
                width: 100%
                text-align: left

                span
                    width: 100%

        input[type=text],input[type=email]
            max-width: 360px
            border-radius: 2px
            background: #f8f8f8
            padding-left: 20px
            font-size: 12px
            font-style: italic
            color: #777777
            width: 360px
            height: 50px
            border: 1px solid #dedede

            @media(max-width: 767px)
                width: 100%!important
                max-width 100%!important
 

        &:nth-child(11)
            width: 100%
 


    .wpcf7-form-control.wpcf7-submit 
        height: 40px
        width: 195px
        background: #262626
        color: #fff
        text-transform: uppercase
        font-weight: 600

div#wpcf7-f100-o1 
    margin-top: 30px


.wpcf7-form-control-wrap 
    position: relative
    margin-top: 5px!important
    display: block

input, textarea 
    width: 100%
    background: #f8f8f8


.mapa_left 
    iframe 
        width: 460px
        height: 290px


.contato--form
    flex: 0 0 487px

    @media(max-width:520px)
        flex: 0 0 100%

        input
            width: 100%!important

    .contato--produto_form

        p
            display: flex
            justify-content: space-between
            width: 100%

            &:nth-child(7)
                    position: relative

            @media(max-width:992px)
                flex-wrap: wrap

            textarea
                height: 115px!important
                width: 100%
                margin-top: 10px!important
                margin-bottom: 0px
                padding-top: 15px

            input,textarea
                padding-left: 15px
                border: 1px solid #bfdbeb
                color: #5b8096!important
                font-style: normal
                width: 100%!important
                margin-top: 10px!important

                &::placeholder
                    color: #bfdbeb
                    font-style: normal
                    font: 12px
                    font-weight: 500!important
            br
                display: none

            label
                width: 100%

        .wpcf7-form-control.wpcf7-submit
            background: #14325a
            width: 173px!important
            height: 48px
            font-size: 0.8125rem
            -webkit-box-shadow: 1px 1px 6px 0px rgba(0,0,0,0.32)
            box-shadow: 1px 1px 6px 0px rgba(0,0,0,0.32)
            color: #fff!important
            border-radius: 3px
            text-transform: uppercase
            text-shadow: 0 0
            margin: 10px 0
            transition: all 150ms ease-in-out
            position: absolute
            right: 0

            &:hover
                opacity: .9

.numeros--contato
    flex: 0 0 45%

    h3
        margin-top: 10px
        line-height: 1.2
        
    @media(max-width:992px)
        margin-top: 90px
        flex: 0 0 100%;
